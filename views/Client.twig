    </div>
    <div id="networksip" class="form-group"> 
        <label>network 1 ip</label><br> 
        <input style="display:inline-block;margin-right:50px;"type="text" class="form-control col-md-6" name="ip1" placeholder="network1 ip" >
    </div>
    <div id="networkscidr" class="form-group"> 
        <label>network 1 cidr</label><br> 
        <input style="display:inline-block;margin-right:50px;"type="number" max="32" class="form-control col-md-6" name="cidr1" placeholder="network1 ip" >
    </div>

    

    <div class="form-group col-md-6">
            <label>Memory</label>
            <input type="text" class="form-control" name="ram" >
             
        </div>

    <div class="form-group col-md-6">
            <label>domain name</label>
            <input type="text" class="form-control" name="dn" >
             
     </div>


     <div class="form-group col-md-6">
            <label>Gateway</label>
            <input type="text" class="form-control" name="gw" >
             
     </div>

     <div class="form-group col-md-6">
            <label>dns server</label>
            <input type="text" class="form-control" name="dns" >
             
     </div>

     <div class="form-group col-md-6">
            <label>folder</label>
            <input type="text" class="form-control" name="folder" >
             
     </div>



      <div class="form-group col-md-6">
            <label>OS</label>
            <select   class="form-control"  id="selectListOS" name="selectListOS" >
