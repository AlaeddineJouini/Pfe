{% extends "./layouts/base.twig" %}
{% use "./layouts/sidebar.twig" %}


{# Title for this page #}
{% block title %}Hello
{% endblock %}

{# Define the stylesheets #}
{% block stylesheets %}
    <link
    href="/images/brand/favicon.png" rel="icon" type="image/png">
    <!-- Fonts -->
    <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <!-- Icons -->
    <link href="/javascripts/plugins/nucleo/css/nucleo.css" rel="stylesheet"/>
    <link
    href="/javascripts/plugins/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet"/>
    <!-- CSS Files -->
    <link href="/css/argon-dashboard.css?v=1.1.0" rel="stylesheet"/>
{% endblock %}

{% block sidebar %}
    {% include "./layouts/sidebar.twig" %}
{% endblock %}

{# Body of this page #}
{% block body %}

    {% block navbar %}

        {% include "./layouts/navbar.twig" with {
        'picture':"/images/theme/team-4-800x800.jpg",
        'name':"Jessica Alba",
    } %}

    {% endblock %}
    {% block background %}

        <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
            <div class="container-fluid">
                <div class="header-body"></div>
            </div>
        </div>

    {% endblock %}

    {# Body #}

    <div class="container-fluid mt--7">
        <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Users</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <div>
                    <table class="table">
                            <thead>
                                <th>vm_name</th>
                                <th>folder</th>
                                
                            </thead>
                            <tbody>
                                {% for v in data %}
                                <tr>
                                <td>{{v.name}}</td>
                                <td>{{v.projectFolder}}</td>
                                <td>Actions</td>
                                <td> 
                                        
                                        <a href=""><button type="button" class="btn btn-default">Details</button></a>
                                        {% if vm.user == null %}
                                        {% if user.role == "admin" or user.role == "super" %}
                                            {% set update = "/vm/adminUpdatevm/" %}
                                        {% else %}
                                        {% set update = "/vm/updateVm/" %}
                                            {% endif %}
                                        
                                        <a href="{{update}}{{v._id}}"><button type="button" class="btn btn-default">update</button></a>
                                        
                                        <a href="/vm/AdminDelVm/{{v._id}}"><button type="button" class="btn btn-default">delete</button></a>
                                        {% endif %}    
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <!--   Core   -->
    <script src="/javascripts/plugins/jquery/dist/jquery.min.js"></script>
    <script src="/javascripts/plugins/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!--   Optional JS   -->
    <!--   Argon JS   -->
    <script src="/javascripts/argon-dashboard.min.js?v=1.1.0"></script>
    <script src="https://cdn.trackjs.com/agent/v3/latest/t.js"></script>
  
{% endblock %}
